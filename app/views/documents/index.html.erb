<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="/documents">HCSvLab</a>
  </div>
</div>


<%= render(:partial => 'search_form') %>

<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
    <div class="btn btn-inverse btn-mini">Python</div>
    </a>
    <div id="collapseOne" class="accordion-body collapse">
      <div class="accordion-inner">
        <textarea class="span9"readonly="readonly" rows="6" cols="102"><%= get_python_query %></textarea>
        <div class="offset7">
          <a class="btn btn-inverse btn-mini" href="http://gsw1-hcsvlab-test1-vm.intersect.org.au:8080" target="_blank">Launch [IPy]</a>
        </div>
      </div>
    </div>
  </div>

  <div class="accordion-group">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
      <div class="btn btn-inverse btn-mini">R</div>
    </a>
    <div id="collapseTwo" class="accordion-body collapse">
      <div class="accordion-inner">
        <textarea class="span9"readonly="readonly" rows="6" cols="102"><%= get_rstudio_query %></textarea>
        <div class="offset7">
          <a class="btn btn-inverse btn-mini" href="http://gsw1-hcsvlab-test1-vm.intersect.org.au/" target="_blank">Launch [R]</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="pull-left" style="padding-left: 20px;">


<% @title_grouped_docs = @documents.group_by {|d| d.corpus_item.title }%>

<% @title_grouped_docs.each do |title, docs| %>

<p><b><%=docs.first.corpus_item.corpus_name + '> ' + docs.first.corpus_item.sub_corpus_name + '> '+ title%></b></p>
<table class="table">
    <tr>
    <th>Year</th>
    <th>Type</th>
    <th>URL</th>
  </tr>
<%docs.each do |document| %>

  <tr>
    <td><%= document.corpus_item.year %></td>
    <td><%= document.media_type %></td>
    <td><%= document.url %></td>
  </tr>

<% end %>
</table>
<br>
<br>
<% end %>
</table>
</div>
